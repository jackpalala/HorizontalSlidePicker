<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.aboo.horizontalslidepicker.app.MainActivity">

    <com.aboo.horizontalslidepicker.app.View.HorizontalPicker
            android:id="@+id/main_timeSelection"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/text_color"
            android:textSize="25sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="2"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="#ffb1e1b6"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/point"/>

    <Button
            android:id="@+id/main_confirm_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:text="确定"
            android:textSize="20sp"
            android:textColor="#6a6a6a"/>

</RelativeLayout>

